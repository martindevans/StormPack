@using StormPack.Blazor.Core

@inject StateManager StateManager

<div class="table-responsive">
    <table class="table table-dark table-striped table-hover table-borderless">
        <thead>
        <tr>
            <th>Name</th>
            <th>Min</th>
            <th>Max</th>
            <th>Precision</th>
            <th>Bits</th>
            <th class="delete-row-header"></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var number in StateManager.Numbers)
        {
            <NumberRow Number=@number/>
        }
        </tbody>
    </table>
</div>

<button type="button" class="btn btn-info" @onclick="@AddNumber">Add Number</button>

@code {

    void AddNumber()
    {
        StateManager.AddNumber();
    }

    protected override void OnInitialized()
    {
        StateManager.OnStateChange += StateHasChanged;
    }
}
